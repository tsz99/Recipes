@model Recipe;
@{
    Layout = null;
}
@using System.Web;
@using Recipes.Data;
<div class="modal fade" tabindex="-1" id="createModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Create new recipe</h3>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body m-3">
                <form>


                    <div class="input-group input-group-lg mb-3">
                        <span class="input-group-text" id="">Title</span>
                        <input type="text" class="form-control" placeholder="Title Name">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text">Summary</span>
                        <textarea class="form-control" placeholder="Place of summary" rows="4"></textarea>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" value="" id="checkVegetarian">
                        <label class="form-check-label" for="checkVegetarian">
                            Vegetarian
                        </label>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" value="" id="checkVegan">
                        <label class="form-check-label" for="checkVegan">
                            Vegan
                        </label>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" value="" id="checkGlutenFree">
                        <label class="form-check-label" for="checkGlutenFree">
                            GlutenFree
                        </label>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" value="" id="checkDiaryFree">
                        <label class="form-check-label" for="checkDiaryFree">
                            DiaryFree
                        </label>
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text">Instructions</span>
                        <textarea class="form-control" placeholder="Place of instructions" rows="4"></textarea>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="submitButton" class="btn btn-primary button button4">Create</button>
                <button type="button" data-dismiss="modal" class="btn btn-primary button button4">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#submitButton").click(function () {
        $.ajax({
            method: "POST",
            data: JSON.stringify(@Model),
            url: "@Url.Action("Create", "Home")",
            success: function (data) {
                $('#modal-placeholder > .modal').modal('hide');
            },
            error: function (data) {
                alert('error' + data.status);
            }
        });
    });
</script>