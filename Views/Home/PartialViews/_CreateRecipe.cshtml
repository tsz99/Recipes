@model Recipe;
@{
    Layout = null;
}
@using System.Web;
@using Recipes.Data;
<div class="modal fade" tabindex="-1" id="createModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="New Title" id="inputTitle" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="New Description 1" id="inputDescription1" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="New Description 2" id="inputDescription2" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="submitButton" class="btn btn-primary button button4">Create</button>
                <button type="button" data-dismiss="modal" class="btn btn-primary button button4">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#submitButton").click(function () {
        $.ajax({
            method: "POST",
            data: JSON.stringify(@Model),
            url: "@Url.Action("Create", "Home")",
            success: function (data) {
                $('#modal-placeholder > .modal').modal('hide');
            },
            error: function (data) {
                alert('error' + data.status);
            }
        });
    });
</script>